@page
@model Animals
@{
    ViewData["Title"] = "Animals";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
<script src="~/js/Animals.js"></script>

<body>
<h2>Animal</h2>
<form name="AddForm">
    <div class="panel-body">
        <input id="animalName" value="Name"/>
        <input id="animalSex" value="Sex"/>
        <input id="animalAge" value="Age"/>
        <button id="addNew" type="button" class="btn btn-sm btn-primary">Add new</button>
    </div>
</form>
<h2>Animals list</h2>
    <form name="userForm">
        <div class="panel-body">
            <button id="getAll" type="button" class="btn btn-sm btn-primary">Show all animals</button>
            <button id="feedAll" type="button" class="btn btn-sm btn-primary">Feed all</button>
        </div>
    </form>
    <table class="table table-condensed table-striped table-bordered">
        <thead><tr><th>Id</th><th>Name</th><th>Sex</th><th>Age</th><th>IsHungry</th></tr></thead>
        <tbody></tbody>
    </table>
</body>